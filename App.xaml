<Application x:Class="CMS_Game_Engines.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CMS_Game_Engines"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="PixelArtFont">
            <Setter Property="TextElement.FontFamily" Value="/Fonts/#VT323"></Setter>
        </Style>
        <Style x:Key="MontserratFont">
            <Setter Property="TextElement.FontFamily" Value="/Fonts/#Montserrat"></Setter>
        </Style>
    </Application.Resources>
</Application>
